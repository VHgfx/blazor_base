@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button 
    class="btn btn-primary" 
    @onclick="IncrementCount"
    disabled=@(currentCount >= MaxAmount)
>
    @(currentCount < MaxAmount ? $"Click me (+{IncrementAmount})" : "Max atteint")
</button>

@code {
    private int currentCount = 0;

    [Parameter]
    public int IncrementAmount { get; set; } = 2;
    public int MaxAmount { get; set; } = 30;

    private void IncrementCount()
    {
        // currentCount++;

        if(currentCount < MaxAmount) 
        {
            currentCount += IncrementAmount;

            // On s'assure que le count ne dépasse pas 10
            if(currentCount > MaxAmount)
            {
                currentCount = MaxAmount;
            }
        }
    }
}
